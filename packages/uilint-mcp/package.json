{
  "name": "uilint-mcp",
  "version": "0.1.0",
  "description": "MCP server for UILint - enables AI agents to validate UI code",
  "type": "module",
  "main": "./dist/server.js",
  "bin": {
    "uilint-mcp": "./dist/server.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/server.ts --format esm --clean",
    "dev": "tsup src/server.ts --format esm --watch",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "uilint-core": "^0.1.0"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ui",
    "lint",
    "ai"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
