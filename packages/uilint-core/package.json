{
  "name": "uilint-core",
  "version": "0.1.0",
  "description": "Core library for UILint - AI-powered UI consistency checking",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./node": {
      "types": "./dist/node.d.ts",
      "import": "./dist/node.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "jsdom": "^27.4.0"
  },
  "devDependencies": {
    "@types/jsdom": "^27.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "ui",
    "lint",
    "consistency",
    "design-system",
    "ai",
    "llm",
    "ollama"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}

